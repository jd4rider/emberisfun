{{outlet}}

<h1>Contact</h1>

<form>
    <div class="form-group {{unless isEmailError 'has-error'}} {{unless isEmailSuccess 'has-success'}}">
        <label for="exampleInputEmail1">Email address</label>
        {{input type="email" value=emailAddress class="form-control" placeholder="Please type your e-mail address." autofocus="autofocus"}}
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group {{unless isMessageError 'has-error'}} {{unless isMessageSuccess 'has-success'}}">
        <label for="exampleTextarea">Message</label>
        {{textarea class="form-control" placeholder="Your message. (At least 5 characters.)" rows="7" value=message}}
    </div>
    <button class="btn btn-primary" disabled="{{unless isValid 'disabled'}}" {{action 'sendMessage'}}>Send message</button>
</form>
<br />
<br />
{{#if responseMessage}}
    <div class="alert alert-success">{{responseMessage}}</div>
{{/if}}